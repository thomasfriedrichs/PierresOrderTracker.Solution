@using OrderTracker.Models;

<h1>Vendors</h1>

@if (@Model.Count == 0)
{
  <h2>No vendors have been added yet</h2>
  <h3><a href="/vendors/new">Add a new one here!</a></h3>
} 
else 
@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name</a></h3>
}

<p><a href='/'>Home</a></p>
